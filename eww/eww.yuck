(defwidget monitor []
  (box :class "monitor_module" :orientation "h" :space-evenly false
    (box :orientation "h"
      (label :class "ram_icon" :text "󰍛")
      (label :text "${round((EWW_RAM.used_mem / EWW_RAM.total_mem) * 100, 0)}%")
    )
    (box :orientation "h"
