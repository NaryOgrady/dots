[colors]
dark-grey = ${xrdb:color0}
dark-blue = ${xrdb:color1}
light-blue = ${xrdb:color2}
light-green = ${xrdb:color4}
light-grey = ${xrdb:color5}
white = ${xrdb:color7}

alert = #bd2c40

[bar/example]
width = 100%
height = 27
fixed-center = false

background = ${colors.dark-grey}
foreground = ${colors.light-blue}
line-size = 3

module-margin-left = 1
module-margin-right = 1

font-0 = Source Code Pro:pixelsize=10;1
font-1 = FontAwesome:pixelsize=12;1

modules-left = i3
modules-center = xwindow 
modules-right = filesystem volume xkeyboard battery wlan date powermenu

tray-position = right
tray-padding = 2

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/xkeyboard]
type = internal/xkeyboard

blacklist-0 = scroll lock
blacklist-1 = num lock

format-prefix = "ÔÑú "
format-prefix-foreground = ${colors.light-green}

label-layout = %layout%
label-layout-foreground = ${colors.light-green}

label-indicator-padding = 1
label-indicator-background = ${colors.light-blue}
label-indicator-foreground = ${colors.dark-grey}

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /home

label-mounted = ÔÇ†: %percentage_used%%
label-mounted-foreground = ${colors.light-green}
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.light-grey}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

ws-icon-0 = "1;Ôâ®"
ws-icon-1 = "2;ÔÑ°"
ws-icon-2 = "3;ÔÑ†"
ws-icon-3 = "4;ÔÅµ"
ws-icon-4 = "10;ÔÜº"
ws-icon-default = "ÔÑë"

label-mode-padding = 1
label-mode-foreground = ${colors.white}
label-mode-background = ${colors.dark-grey}

; focused = Active workspace on focused monitor
label-focused = %icon%
label-focused-background = ${colors.light-green}
label-focused-foreground = ${colors.dark-grey}
label-focused-underline = ${colors.light-green}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %icon%
label-unfocused-foreground = ${colors.light-green}
label-unfocused-background = ${colors.dark-grey}
label-unfocused-padding = 2 

; visible = Active workspace on unfocused monitor
label-visible = %icon%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %icon%
label-urgent-background = ${colors.light-blue}
label-urgent-foreground = ${colors.dark-grey}
label-urgent-padding = 2

[module/date]
